
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}


<div class="card card_border border-primary-top p-4">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Loại Chè</label>
                    </div>
                    <select class="custom-select" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option>Chè Đinh</option>
                        <option>Chè Búp</option>
                        <option>Chè Thượng Hạng</option>
                        <option>Chè Đặc Sản</option>
                        <option>Chè Truyền Thống</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Khối lượng (kg)</label>
                    </div>
                    <select class="custom-select" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option>0,5</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Giá</label>
                    </div>
                    <select class="custom-select" id="inputGroupSelect01">
                        <option selected>Choose...</option>
                        <option value="1"> dười 500 vnđ</option>
                        <option value="2">trên 500 đến dưới 2tr</option>
                        <option value="3">Trên 2tr</option>
                    </select>
                </div>
            </div>
            <div class="col-sm">
                <button type="button" class="btn btn-outline-primary">LỌC</button>
            </div>
            <div class="col-sm-3">
                <div class="search-box">
                    <form action="#search-results.html" method="get">
                        <input class="search-input" placeholder="Search Here..." type="search" id="search">
                        <button class="search-submit" value=""><span class="fa fa-search"></span></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container" style="height:50px"></div>

<div class="row row-cols-1 row-cols-md-5 g-3">
    @for (int i = 0; i < 10; i++)
    {
        <div class="col" style="padding-bottom:20px">
            <div class="card h-100">
                <img src="https://mdbootstrap.com/img/new/standard/city/044.jpg"
                     class="card-img-top"
                     alt="..." />
                <div class="card-body">
                    <h5 class="card-title">Mã Chè</h5>
                    <p class="card-text">133,331,1313 vnđ  </p>
                </div>

                <div class="card-footer">
                    <small class="text-muted">Cập nhật lần cuối 3 phú trước</small>
                </div>
                <a href="list-pruduct/masp" class="btn btn-primary">Xem Chi Tiết</a>
            </div>
        </div>
    }

</div>

